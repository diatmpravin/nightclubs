= simple_form_for @bar, :validate => true do |form|

	-if @bar.errors.any?
		#errorExplanation
			%h2= "#{pluralize(@bar.errors.count, "error")} prohibited this #{Bar.name.titleize} from being saved:"
			%ul
				- @bar.errors.full_messages.each do |msg|
					%li= msg  
	%table
		%tr
			%td{ :id => 'textLabel'} Bar Name 
			%td{ :id => 'textLabel'}= form.text_field :name, :class => 'textFieldEffect'
			
		%tr
			%td{ :id => 'textLabel'} Person of contact
			%td{ :id => 'textLabel'}= form.text_field :owner, :class => 'textFieldEffect'
			
		%tr
			%td{ :id => 'textLabel'} Phone
			%td{ :id => 'textLabel'}= form.text_field :phone, :class => 'textFieldEffect'
			
		%tr
			%td{ :id => 'textLabel'} City
			%td{ :id => 'textLabel'}= form.text_field :city, :class => 'textFieldEffect'

		%tr
			%td{ :id => 'textLabel'} Website
			%td{ :id => 'textLabel'}= form.text_field :website, :class => 'textFieldEffect'
			
		%tr
			%td{ :id => 'textLabel'} Address
			%td{ :id => 'textLabel'}= form.text_field :location, :class => 'textFieldEffect'

	.actions
		= form.button :submit, :value => "REGISTER", :class => "register"
